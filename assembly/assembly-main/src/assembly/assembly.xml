<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-zip</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <outputDirectory>tomcat/webapps</outputDirectory>
            <outputFileNameMapping>ROOT.war</outputFileNameMapping>
            <includes>
                <include>org.eclipse.che.sample:assembly-ide-war</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dependency/eclipse-che-${che.version}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>**/tomcat/webapps/ROOT.war</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
